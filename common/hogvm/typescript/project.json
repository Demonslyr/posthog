{
    "$schema": "https://json.schemastore.org/nx",
    "name": "hogvm-ts",
    "sourceRoot": "{projectRoot}/src",
    "projectType": "library",
    "targets": {
        "prepare": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "pnpm install --frozen-lockfile --filter @posthog/hogvm && echo 'Installed deps for @posthog/hogvm'"
                ],
                "cwd": "{projectRoot}"
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["pnpm run build"],
                "cwd": "{projectRoot}"
            },
            "inputs": ["{projectRoot}/src/**/*"],
            "outputs": ["{projectRoot}/dist"]
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["pnpm run test"],
                "cwd": "{projectRoot}"
            }
        }
    }
}
