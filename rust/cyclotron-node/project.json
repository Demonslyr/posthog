{
    "$schema": "https://json.schemastore.org/nx",
    "name": "cyclotron-node",
    "sourceRoot": "{projectRoot}/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["pnpm run build"],
                "cwd": "{projectRoot}"
            },
            "inputs": ["{projectRoot}/src", "{projectRoot}/Cargo.toml", "{projectRoot}/package.json", "{projectRoot}/pnpm-lock.yaml"],
            "outputs": ["{projectRoot}/dist", "{projectRoot}/index.node"],
            "dependsOn": ["deps:build"]
        }
    }
}
