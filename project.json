{
    "$schema": "https://json.schemastore.org/nx",
    "name": "frontend",
    "sourceRoot": "{projectRoot}/frontend/src",
    "root": ".",
    "projectType": "application",
    "targets": {
        "deps:prepare": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["echo 'Preparing frontend dependencies'"]
            },
            "dependsOn": ["^prepare"]
        },
        "deps:build": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["echo 'Building frontend dependencies'"]
            },
            "dependsOn": ["^build"]
        },
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["pnpm run build"]
            },
            "dependsOn": ["deps:build"],
            "inputs": ["{projectRoot}/frontend/src/**/*"],
            "outputs": ["{projectRoot}/frontend/dist"]
        },
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["pnpm start"]
            },
            "dependsOn": ["^build"]
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["pnpm run test"]
            },
            "dependsOn": ["^build"]
        }
    }
}
